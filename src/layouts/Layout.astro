---

import VideoSEO from '../components/VideoSEO.astro';
interface Props {
	title: string;
	videoName?: string;
	videoUrl?: string;
	videoKey?: string;
}

const { title, videoName, videoUrl, videoKey } = Astro.props;

const isVideoPage = Boolean(videoName && videoUrl && videoKey)
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		{isVideoPage && <VideoSEO 
			videoName={videoName!} 
			videoUrl={videoUrl!} 
			videoKey={videoKey!}
		/>}

	</head>
	<body>
		<nav>
			<a href="/">Home</a>
		</nav>
		<slot />
	</body>
</html>

<style>
	nav {
		background-color: #222;
		padding: 0.5rem 1rem;
		width: 100%;
		display: flex;
		justify-content: space-between;
		align-items: center;

		a {
			color: white;
			font-weight: bold;
			transition: color 0.2s;
			font-size: 1.1rem;
			&:hover {
				color: orange;
			}
		}
	}
</style>

